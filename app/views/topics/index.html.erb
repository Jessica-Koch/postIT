<h1>Topics</h1>

<div class="row">
    <div class="col-md-8">
        <%= render @topics %>
    </div>
    <% if user_is_admin? %>
    <div class="col-md-4">
        <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
    <% end %>
    <div class="col-md-12">

        <ul class="pagination justify-content-end">
            <div class="paginator">
                <%= paginate @topics %>
            </div>
        </ul>
    </div>

</div>
