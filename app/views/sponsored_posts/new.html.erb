<h1>New Sponsored Posts</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>

        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field  :title, class: "form-control", placeholder: "Enter sponsored post title" %>
        </div>
        <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter sponsored post body" %>
        </div>
        <div class="form-group">
            <%= f.label :price %>
            <span class="input-group-addon">$</span>
            <%= f.number_field :amount, value: number_to_currency(f.object.amount.to_f, delimiter: '', unit: ''), step: :any, class: 'special_input form-control' %>
            <span class="input-group-addon">.00</span>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: "btn btn-outline-warning" %>
        </div>
        <% end %>
    </div>
</div>
