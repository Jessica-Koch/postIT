<div class="media">
    <div class="media-body">
        <h4 class="media-heading">
            <%= link_to post.title, topic_post_path(@topic, post) %>
        </h4>
        <small>
            submitted
            <%= time_ago_in_words(post.created_at) %>
            ago by <%= post.user.name %>
            <br>
            <% if post.comments.count > 1 %>
            <%= post.comments.count %>
            Comments
        <% else %>
            <%= post.comments.count %>
            Comment
            <% end %>
        </small>
    </div>
</div>
