<% if favorite = current_user.favorite_for(post) %>
    <%= link_to [post, favorite], class: 'btn btn0danger', method: :delete do %>
    <i class="fa fa-star-o" aria-hidden="true"> </i>&nbsp; Unfavorite
    <% end %>
<% else %>
    <%= link_to [post, Favorite.new], class: 'btn btn-primary', method: :post do %>
    <i class="fa fa-star" aria-hidden="true"> </i>&nbsp; Favorite

<% end %>
<% end %>
