<div class="row">
<div class="col-md-4">
    <h1>Sign Up Confirmation</h1>
    <h4>Are you sure these values are correct?</h4>
    <h5>Email: <%= @user.email %></h5>
    <h5>Name: <%= @user.name %></h5>
</div>
</div>
<div class="row">
    <div class="col-md-4">
        <%= button_to "Yes", {controller: "users", action: "create"}, params: { user: @user.attributes }, class: 'btn btn-success' %>

    </div>
    <div class="col-md-4">
        <%= button_to "No", {controller: "users", action: "create"}, params: { user: @user.attributes }, method: :get, class: 'btn btn-danger' %>
    </div>
</div>
